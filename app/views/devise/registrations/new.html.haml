.modal-dialog
	.modal-content
		.modal-header
			%h1.text-center Enroll
		.modal-body
			.form.col-md-12.center-block
				= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
					= devise_error_messages!
					%div
						/= f.label :email
						%br/
						= f.email_field :email, autofocus: true, :placeholder => "Email", :type => "text", :class => "form-control input-lg"
					%div
						/= f.label :password
						%br/
						= f.password_field :password, autocomplete: "off", :placeholder => "Password", :type => "password", :class => "form-control input-lg"
					%div
						/= f.label :password_confirmation
						%br/
						= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Confirm Password", :type => "password", :class => "form-control input-lg"
					%br/
					%div= f.submit "Sign up", :class => "btn btn-primary btn-lg btn-block"
					%span.pull-right
						= render "devise/shared/links"
					.modal-footer
						.col-md-12