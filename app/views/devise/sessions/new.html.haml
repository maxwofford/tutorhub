.modal-dialog
	.modal-content
		.modal-header
			%button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} Ã—
			%h1.text-center Login
		.modal-body
			.form.col-md-12.center-block
				= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
					%div
						/= f.label :email
						%br/
						= f.email_field :email, autofocus: true, :placeholder => "Email", :type => "text", :class => "form-control input-lg"
					%div
						/= f.label :password
						%br/
						= f.password_field :password, autocomplete: "off", :placeholder => "Password", :type => "password", :class => "form-control input-lg"
					- if devise_mapping.rememberable?
						%br/
						%div
							= f.check_box :remember_me
							= f.label :remember_me
						%br/
					%div= f.submit "Sign in", :class => "btn btn-primary btn-lg btn-block"
					%span.pull-right
						= render "devise/shared/links"
					.modal-footer
						.col-md-12
